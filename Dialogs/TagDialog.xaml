<Window x:Class="hci2021.Dialogs.TagDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hci2021.Dialogs"
        mc:Ignorable="d"
        Title="TagDialog" Height="768" Width="1024"
        MaxHeight="768" MaxWidth="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Label:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">Colour:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center">Description:</TextBlock>

        <TextBox Grid.Column="1"  Grid.Row="0" ></TextBox>
        <TextBox Grid.Column="1"  Grid.Row="1" ></TextBox>
        <TextBox Grid.Column="1"  Grid.Row="2" ></TextBox>

        <Button Grid.Column="1"  Grid.Row="3" Content="Save"></Button>
    </Grid>
</Window>
